{
  "name": "pivotify",
  "version": "1.0.4",
  "description": "Enable anyone in the world to learn how to program by removing the language barrier inherent to English based programming languages",
  "main": "index.js",
  "bin": {
    "pivot": "./bin/pivot.js"
  },
  "scripts": {
    "test": "npm-run-all --parallel test:* ",
    "test:forward:spanish": "npx pivot --hl spanish --i test/forward/spanish --o dist/forward/spanish",
    "test:forward:hindi": "npx pivot --hl hindi --i test/forward/hindi --o dist/forward/hindi",
    "test:forward:chinese": "npx pivot --hl chinese --i test/forward/chinese --o dist/forward/chinese",
    "templatize": "npx node ./src/utils/templatizer.js",
    "execute": "npm-run-all execute:*",
    "execute:hindi": "node dist/forward/hindi/test-hindi.js",
    "execute:spanish": "node dist/forward/spanish/test-spanish.js",
    "compile": "npm run test && npm run execute",
    "compile:spanish": "npm run test:spanish && npm run execute:spanish",
    "start": "npm run compile:spanish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stefaniehansen/pivot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stefaniehansen/pivot/issues"
  },
  "files": [
    "rules",
    "src",
    "bin",
    "language-maps"
  ],
  "homepage": "https://github.com/stefaniehansen/pivot#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "concat": "^1.0.3",
    "jsonfile": "^5.0.0",
    "readdirp": "^3.1.1",
    "npx": "^10.2.0",
    "yargs": "^13.3.0",
    "@sweet-js/cli": "^3.0.13",
    "@sweet-js/helpers": "^4.0.1"
  }
}
